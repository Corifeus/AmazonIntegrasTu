{% extends '::base.html.twig' %}
{% block title %}PIG{% endblock %}

{% block menubar %}
    {% for servicio in servicios %}

        <li><a href="/clientes/show/{{servicio.cliente.id}}">{{ servicio.cliente.nombre }}</a></li>

    {% endfor %}
{% endblock %}


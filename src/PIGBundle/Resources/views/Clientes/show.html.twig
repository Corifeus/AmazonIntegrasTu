    <td>{{ servicio.cliente.cIF }}</td>
  </tr>

  <tr>
      <td>Domicilio Fiscal</td>
      <td>{{ servicio.cliente.domicilioFiscal }}</td>
  </tr>

  <tr>
    <td>CP</td>
    <td>{{ servicio.cliente.cP }}</td>
  </tr>

  <tr>
    <td>Municipio</td>
    <td>{{ servicio.cliente.municipio }}</td>
  </tr>

  <tr>
    <td>Provincia</td>
    <td>{{ servicio.cliente.provincia }}</td>
  </tr>

  <tr>
    <td>Nº Cuenta bancaria</td>
    <td>{{ servicio.cliente.noCuentaBancaria }}</td>
  </tr>

  <tr>
    <td>Persona de contacto</td>
    <td>{{ servicio.cliente.personaContacto }}</td>
  </tr>

  <tr>

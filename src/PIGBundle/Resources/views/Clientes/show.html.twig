  {% endif %}
  {% endif %}
  {% endfor %}
</table>

<table class="table table-striped">

  {% set contador = 1 %}

  {% for servicio in servicios %}
  {% if servicio.cliente.id == id %}
  <tr>
    <td>Servicio {{ contador }}</td>
